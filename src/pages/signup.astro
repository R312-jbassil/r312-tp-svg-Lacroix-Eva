---
//@ts-nocheck
import "../styles/global.css";
import { ui } from "../i18n/ui.js";
const locale = (Astro.locals.lang as "en" | "fr") ?? "en";

import Layout from "../layouts/Layout.astro";
import { ui } from "../i18n/ui.js";

const user = Astro.locals.user;

if (Astro.locals.user) {
  return Astro.redirect("/");
}
---

<!doctype html>
<html lang={locale} data-theme="Eva" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{ui[locale].signup.title}</title>
  </head>
<header class="w-full flex justify-end p-4 bg-base-200 shadow-md rounded-b-lg">
    <form method="POST" action={Astro.url.pathname} class="flex items-center gap-2">
        <label for="language" class="font-semibold text-primary">{ui[locale].nav.language}:</label>
        <select
            id="language"
            name="language"
            class="select select-bordered select-primary"
            onchange="this.form.submit()"
        >
            <option disabled>{ui[locale].nav.language}</option>
            <option value="en" selected={locale === "en"}>English</option>
            <option value="fr" selected={locale === "fr"}>Français</option>
        </select>
    </form>
</header>
  <div
    class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-400 to-secondary"
  >
    <div class="card w-full max-w-md shadow-2xl bg-base-100">
      <div class="card-body">
        <h1
          class="card-title text-4xl mb-6 justify-center text-center text-primary font-bold"
        >
          {ui[locale].signup.title}
        </h1>
        <form id="signup-form" class="flex flex-col gap-5">
          <input
            type="text"
            name="username"
            placeholder={ui[locale].signup.username}
            required
            class="input input-bordered input-primary w-full"
          />
          <input
            type="email"
            name="email"
            placeholder={ui[locale].signup.email}
            required
            class="input input-bordered input-primary w-full"
          />
          <input
            type="password"
            name="password"
            placeholder={ui[locale].signup.password}
            required
            class="input input-bordered input-primary w-full"
          />

          <button type="submit" class="btn btn-primary w-full btn-lg"
            >{ui[locale].signup.button}</button
          >
        </form>
        <p id="status" class="mt-4 text-center text-error"></p>
        <p class="mt-2 text-center">
          {ui[locale].signup.alreadyHaveAccount}
          <a href="/login" class="link link-primary"
            >{ui[locale].login.button}</a
          >
        </p>
      </div>
    </div>
  </div>

  <script>
    //@ts-nocheck
    const form = document.getElementById("signup-form");
    const status = document.getElementById("status");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      const formData = new FormData(form);

      const password = formData.get("password");

      const res = await fetch("/api/signup", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          username: formData.get("username"),
          email: formData.get("email"),
          password: password,
        }),
      });

      if (res.ok) {
        status.textContent = "✅ Compte créé ! Redirection...";
        setTimeout(() => (window.location.href = "/login"), 1500);
      } else {
        status.textContent = "❌ Erreur lors de l’inscription";
      }
    });
  </script>


</html>
