---
//@ts-nocheck
import "../styles/global.css";
import { ui } from "../i18n/ui.js";
const locale = (Astro.locals.lang as "en" | "fr") ?? "en";

import Layout from "../layouts/Layout.astro";

const user = Astro.locals.user;

if (user) {
  return Astro.redirect("/");
}
---

<!doctype html>
<html lang={locale} data-theme="Eva" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Connexion</title>
  </head>
  <div
    class="min-h-screen flex items-center justify-center bg-gradient-to-br from-primary to-secondary"
  >
    <div class="card w-full max-w-md shadow-2xl bg-base-100">
      <div class="card-body">
        <h1
          class="card-title text-4xl mb-6 justify-center text-center text-primary font-bold"
        >
          Connexion
        </h1>
        <!-- Formulaire de connexion -->
        <form id="login-form" class="flex flex-col gap-5">
          <input
            type="email"
            name="email"
            placeholder="Email"
            required
            class="input input-bordered input-primary w-full"
          />
          <input
            type="password"
            name="password"
            placeholder="Mot de passe"
            required
            class="input input-bordered input-primary w-full"
          />
          <button type="submit" class="btn btn-primary w-full btn-lg">
            Se connecter
          </button>
        </form>
        <p id="status" class="mt-4 text-center text-error"></p>
        <p class="mt-2 text-center">
          Pas de compte ? <a href="/signup" class="link link-primary"
            >Créer un compte</a
          >
        </p>
        <!-- Zone d'affichage du statut -->
        <p id="status" class="mt-4 text-center text-error font-semibold"></p>
      </div>
    </div>
  </div>

  <script>
    //@ts-nocheck
    // On retire toute ancienne information utilisateur du stockage local
    localStorage.removeItem("user");
    const form = document.getElementById("login-form");
    const status = document.getElementById("status");

    // Gestion de la soumission du formulaire
    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      const formData = new FormData(form);

      // Envoi des informations au serveur via l'API /api/login
      const res = await fetch("/api/login", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          email: formData.get("email"),
          password: formData.get("password"),
        }),
        credentials: "include", // Permet d'inclure les cookies dans la requête
      });

      // Traitement de la réponse
      if (res.ok) {
        const resData = await res.json();
        localStorage.setItem("user", JSON.stringify(resData.user)); // Sauvegarde des infos utilisateur
        status.textContent = "✅ Connexion réussie !";
        // Redirection vers la page d'accueil après un court délai
        window.location.href = "/";
      } else {
        status.textContent = "❌ Email ou mot de passe invalide";
      }
    });
  </script>


</html>
