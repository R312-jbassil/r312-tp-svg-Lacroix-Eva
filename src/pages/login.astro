---
//@ts-nocheck
import "../styles/global.css";
import { ui } from "../i18n/ui.js";
const locale = (Astro.locals.lang as "en" | "fr") ?? "en";

import Layout from "../layouts/Layout.astro";

const user = Astro.locals.user;

if (user) {
  return Astro.redirect("/");
}
---

<!doctype html>
<html lang={locale} data-theme="Eva" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{ui[locale].login.title}</title>
  </head>
  <header
    class="w-full flex justify-end p-4 bg-base-200 shadow-md rounded-b-lg"
  >
    <form
      method="POST"
      action={Astro.url.pathname}
      class="flex items-center gap-2"
    >
      <label for="language" class="font-semibold text-primary"
        >{ui[locale].nav.language}:</label
      >
      <select
        id="language"
        name="language"
        class="select select-bordered select-primary"
        onchange="this.form.submit()"
      >
        <option disabled>{ui[locale].nav.language}</option>
        <option value="en" selected={locale === "en"}>English</option>
        <option value="fr" selected={locale === "fr"}>Français</option>
      </select>
    </form>
  </header>
  <div
    class="min-h-screen flex items-center justify-center bg-gradient-to-br from-primary to-secondary"
  >
    <div class="card w-full max-w-md shadow-2xl bg-base-100">
      <div class="card-body">
        <h1
          class="card-title text-4xl mb-6 justify-center text-center text-primary font-bold"
        >
          {ui[locale].login.title}
        </h1>
        <!-- Formulaire de connexion -->
        <form id="login-form" class="flex flex-col gap-5">
          <input
            type="email"
            name="email"
            placeholder={ui[locale].login.email}
            required
            class="input input-bordered input-primary w-full"
          />
          <input
            type="password"
            name="password"
            placeholder={ui[locale].login.password}
            required
            class="input input-bordered input-primary w-full"
          />
          <button type="submit" class="btn btn-primary w-full btn-lg">
            {ui[locale].login.button}
          </button>
        </form>
        <p id="status" class="mt-4 text-center text-error"></p>
        <p class="mt-2 text-center">
          {ui[locale].login.noAccount} <a href="/signup" class="link link-primary"
            >{ui[locale].signup.button}</a
          >
        </p>
        
        <p id="status" class="mt-4 text-center text-error font-semibold"></p>
      </div>
    </div>
  </div>

  <script>
    //@ts-nocheck
    // On retire toute ancienne information utilisateur du stockage local
    localStorage.removeItem("user");
    const form = document.getElementById("login-form");
    const status = document.getElementById("status");

    // Gestion de la soumission du formulaire
    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      const formData = new FormData(form);

      // Envoi des informations au serveur via l'API /api/login
      const res = await fetch("/api/login", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          email: formData.get("email"),
          password: formData.get("password"),
        }),
        credentials: "include", // Permet d'inclure les cookies dans la requête
      });

      // Traitement de la réponse
      if (res.ok) {
        const resData = await res.json();
        localStorage.setItem("user", JSON.stringify(resData.user)); // Sauvegarde des infos utilisateur
        status.textContent = "✅ Connexion réussie !";
        // Redirection vers la page d'accueil après un court délai
        window.location.href = "/";
      } else {
        status.textContent = "❌ Email ou mot de passe invalide";
      }
    });
  </script>


</html>
